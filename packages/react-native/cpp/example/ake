#!/usr/bin/env nu


def main [] {}

def 'main start' [path?: string = './assets/cn-01.jpg'] {
  mkdir build
  cd build
  cmake ..  
  make
  cd ..
  main run $path
}

def 'main run' [path: string] {
  ./build/ocr_example $path
}

def 'main start watch' [] {
  chokidar *.cc *.h CMakeLists.txt -c './ake start' --initial 
}
